model CartItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String
  name      String
  slug      String  @unique
  image     String
  price     Float
  quantity  Int
  size      String? // Nullable, since size might not be selected
  color     String? // Nullable, if color is not selected
}

